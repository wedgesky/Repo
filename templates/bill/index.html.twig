<!DOCTYPE html>

<title>Bill index</title>

{% block body %}
    <h1>Bill index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Number</th>
                <th>Customerid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bill in bills %}
            <tr>
                <td>{{ bill.id }}</td>
                <td>{{ bill.date ? bill.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.number }}</td>
                <td>{{ bill.customerid }}</td>
                <td>
                    <a href="{{ path('bill_show', {'id': bill.id}) }}">show</a>
                    <a href="{{ path('bill_edit', {'id': bill.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bill_new') }}">Create new</a>
{% endblock %}
